{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist", // webpackで指定するが念の為こちらでも指定しておく
    "strict": true,
    "esModuleInterop": true,
    "sourceRoot": "./src",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/@types"]
  },
  "files": [
    "main.ts"
  ]
}
